  }
</script>
</head>
<body>
<div class="container">
  <div class="header-content">
    <h1>Sig-Tec</h1>
    <nav>
      <a href="#">Home</a>
      <a href="#users">Users</a>
      <a href="#footer">Comtact</a>
    </nav>
  </div>
  <div class="main-content">
    <section class="content">
      <div class="imagem" id="col02">
        <article>
          <h2>Programação</h2>
        </article>
       <img src="/images/fundo02.jpg" alt="softwares" />
      </div>
      <article id="col03">
        <h2>HTML 5</h2>
      </article>
    </section>
    <% if(clienteLogado.nomeUsuario == "iago_xd") { %>
    <section class="content-table">
      <table id="users">
        <caption><h1>Usuários</h1></caption>
        <thead>
          <tr>
            <th>Id</th>
            <th>Nome de Usuário</th>
            <th>Email</th>
            <th>Senha</th>
            <th colspan="2">Ações</th>
          </tr>
        </thead>
        <tbody>
         <% clientes = todosClientes %>
         <!-- Esta variável "clientes" está recebendo um Array (todosClientes).-->
         <% clientes.forEach(cliente => { %>
          <tr>
            <form action="/formUpdate" method="POST">
           <td><input type="text" name="id" value="<%= cliente.id %>" readonly/></td>
            <td><input type="text" name="nomeUsuario" value="<%= cliente.nomeUsuario %>" readonly/></td>
            <td><input type="text" name="email" value="<%= cliente.email %>" readolny/></td>
            <td><input type="text" name="senha" value="<%= cliente.senha %>" readonly/></td>
            <td id="td"><button id="update" name="update" type="submit">Update</button></td>
            </form>
          </tr>
         <% }); %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="6"><a href="https://github.com/theus-iago/" target="_blank">&copySigTec</a></th>
          </tr>
        </tfoot>
      </table>
    </section>
    <% } %>
    <section class="content-image"></section>
  </div>
  <div class="footer-content" id="footer">
    <p><a href="https://github.com/theus-iago/" target="_blank">&copyIago</a></p>
  </div>
</div>
</body>
</html>