<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/main.css' />
<title><%= title %></title>
<script type="module" defer>
  import Window from "/javascripts/window.js";
  const genero = "<%= clienteLogado.genero %>";
  
  if (genero == 'Masculino') {
    const config = {
      header_content: "<h2>Tec Alert</h2>",
      main_content: "<h3>Bem-Vindo ao Sistema <strong>Tec</strong>, <br/> Sr.<strong><%= clienteLogado.nomeCompleto %></strong>!</h3>",
      color: "#252525"
    }
    //Window.config(config);
    //Window.exibir();
  } else if (genero == 'Feminino') {
    const config = {
      header_content: "<h2>Tec Alert</h2>",
      main_content: "<h3>Bem-Vindo ao Sistema <strong>Tec</strong>, <br/> Sra.<strong><%= clienteLogado.nomeCompleto %></strong>!</h3>",
      color: "#252525"
    }
